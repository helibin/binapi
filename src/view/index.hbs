<!-- {% include "layout/header.base.html" %} -->
{{> header.base }}

<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">{{ pkg.name }}</a>
  <button class="btn btn-outline-primary d-none" id="toSignIn" data-toggle="modal"
    data-target="#exampleModal">登录</button>
  <button class="btn btn-outline-primary d-none" id="toSignOut">登出</button>
</nav>

<div class="text-center">
  <div class="welcome">{{ pkg.description }}!</div>
</div>

<div class="text-center">
  <a target="_blank" href="/apidoc/index">公开API文档</a><br>
  <a target="_blank" href="/mapidoc/index">私有API文档（需登录）</a>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">登录</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/auth/user/do/sign-in">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">用户名</label>
            <input type="text" required class="form-control" id="identifier" value="">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">密码</label>
            <input type="text" required class="form-control" id="password" value="">
          </div>
          <div class="alert alert-danger d-none" role="alert" id="errMsg"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="signIn" class="btn btn-primary">确定</button>
      </div>
    </div>
  </div>
</div>

{{> footer }}
{{> footer.base }}

<script src="/js/index.js"></script>
